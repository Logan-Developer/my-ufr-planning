<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyUFRPlanning" parent="Theme.Material3.Light">
        <!-- Remove the default action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorSurface">@color/card_subject_background</item>
    </style>

    <style name="Theme.MyUFRPlanning.AppWidgetContainerParent" parent="Theme.MyUFRPlanning">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.MyUFRPlanning.AppWidgetContainer" parent="Theme.MyUFRPlanning.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>

    <style name="Theme.MyUFRPlanning.AppWidgetPreviewContainer" parent="Theme.MyUFRPlanning.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">8dp</item>
    </style>
</resources>